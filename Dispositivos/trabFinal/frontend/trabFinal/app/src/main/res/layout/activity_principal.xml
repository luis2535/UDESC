<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nome_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bem-vindo!"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/black"
                android:layout_marginBottom="32dp" />

            <Button
                android:id="@+id/criar_servico_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Criar Serviço"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="12dp"
                android:backgroundTint="#125D55"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:drawableLeft="@drawable/baseline_add_24"
                android:drawablePadding="8dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/encontrar_servico_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Encontrar Serviço"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="12dp"
                android:backgroundTint="#125D55"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:drawableLeft="@drawable/search_alt_1_svgrepo_com"
                android:drawablePadding="8dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/meusServicos_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meus Serviços"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="12dp"
                android:backgroundTint="#125D55"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:drawableLeft="@drawable/list_svgrepo_com"
                android:drawablePadding="8dp"
                android:visibility="gone" />


            <Button
                android:id="@+id/meusContratos_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meus Contratos"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="12dp"
                android:backgroundTint="#125D55"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:drawableLeft="@drawable/list_svgrepo_com"
                android:drawablePadding="8dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/logout_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="12dp"
                android:backgroundTint="#F44336"
                android:text="Logout"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:drawableLeft="@drawable/logout_2_svgrepo_com"
                android:drawablePadding="8dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
